{
	"extends": "../tsconfig.json",
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext", // https://www.typescriptlang.org/tsconfig#moduleResolution
		"target": "ES2020",
		"outDir": "out",
		"paths": {
			"*": [
				"../src/*",
				"../test*",
				"../node_modules/*"
			]
		},
		"sourceMap": true,
		"strict": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"listEmittedFiles": true
	},
	"include": [
		"*.ts",
		"**/*.ts"
	],
	"exclude": [
		"**/.vscode-test/**",
		"**/dummy-ext/**",
		"**/node_modules/**",
		"**/test-bk/**"
	]
}
