// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "folderOpen",
			"detail": "run on workspace load",
			"hide": true,
			"type": "shell",
			"dependsOn": [
				"npm clean",
				"npm pretest",
				"npm watch"
			],
			"dependsOrder": "sequence",
			"presentation": {
				"reveal": "always",
				"group": "build-task"
			},
			"runOptions": {
				"runOn": "folderOpen"
			},
		},
		{
			"label": "npm clean",
			"hide": true,
			"type": "npm",
			"script": "clean",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"group": "build-task"
			},
		},
		{
			"label": "npm package",
			"hide": true,
			"type": "npm",
			"script": "package",
			"presentation": {
				"reveal": "always",
			}
		},
		{
			"label": "npm pretest",
			"hide": true,
			"type": "npm",
			"script": "pretest",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"group": "build-task"
			},
		},
		{
			"label": "npm watch",
			"detail": "webpack --mode development --watch",
			"type": "npm",
			"script": "watch",
			"isBackground": true,
			"presentation": {
				"reveal": "always",
				"group": "build-task"
			},
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"problemMatcher":  "$ts-webpack-watch",
		},
		{
			"label": "run all tests in docker",
			"type": "shell",
			"command": "docker/run_tests.sh",
			"args": [
				"-m"
			],
			"problemMatcher": []
		},
		{
			"label": "run test in docker",
			"type": "shell",
			"command": "docker/run_tests.sh",
			"args": [
				"-p",
				"'${relativeFile}'",
				"-m"
			],
			"problemMatcher": [],
		},
		{
			"type": "npm",
			"script": "lint",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"label": "npm: lint",
			"detail": "npx eslint ./src --ext .ts,.js",
		},
		{
			"type": "npm",
			"script": "lint-fix-all",
			"problemMatcher": [
				"$eslint-stylish",
			],
			"label": "npm: lint-fix-all",
			"detail": "npx eslint ./src --ext .ts,.js --fix",
		},
		{
			"label": "npm: build",
			"detail": "npm run webpack",
			"type": "npm",
			"script": "build",
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"presentation": {
				"reveal": "always",
				"group": "build-task"
			},
			"problemMatcher": "$ts-webpack-watch",
		},
		{
			"label": "npm: rebuild",
			"detail": "npm run clean && npm run webpack",
			"type": "npm",
			"script": "rebuild",
			"group": {
				"kind": "build",
				"isDefault": true,
			},
			"presentation": {
				"reveal": "always",
				"group": "build-task"
			},
			"problemMatcher": "$ts-webpack-watch",
		},
	]
}
