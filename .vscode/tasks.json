// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "folderOpen",
			"hide": true,
			"dependsOn": [
				"npm clean",
				"npm watch"
			],
			"dependsOrder": "sequence",
			"presentation": {
				"reveal": "always",
				"group": "build-task"
			},
			"group": {
				"kind": "build",
				"isDefault": false
			},
			"runOptions": {
				// "runOn": "folderOpen"
				"runOn": "default"
			}
		},
		{
			"label": "npm clean",
			"hide": true,
			"type": "npm",
			"script": "clean",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "build-task",
				"close": true
			}
		},
		{
			"label": "npm watch",
			"hide": true,
			"type": "npm",
			"script": "watch",
			"problemMatcher": "$tsc-watch",
			"isBackground": true,
			"presentation": {
				"reveal": "never",
				"group": "build-task"
			},
			"group": "build",
			"runOptions": {
				"runOn": "folderOpen"
			},
			"detail": "webpack --mode development --watch"
		},
		{
			"label": "run all tests in docker",
			"type": "shell",
			"command": "docker/run_tests.sh",
			"args": [
				"-m"
			],
			"problemMatcher": []
		},
		{
			"label": "run test in docker",
			"type": "shell",
			"command": "docker/run_tests.sh",
			"args": [
				"-p",
				"'${relativeFile}'",
				"-m"
			],
			"problemMatcher": []
		},
		{
			"type": "npm",
			"script": "lint-fix-all",
			"problemMatcher": [
				"$eslint-stylish"
			],
			"label": "npm: lint-fix-all",
			"detail": "npx eslint ./src --ext .ts,.js --fix"
		}
	]
}
