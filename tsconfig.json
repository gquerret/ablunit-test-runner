{
	"compilerOptions": {
		"module": "NodeNext",
		"moduleResolution": "NodeNext", // https://www.typescriptlang.org/tsconfig#moduleResolution
		"target": "ES2020",
		"outDir": "out",
		"paths": {
			"*": [ "./src/*" ]
		},
		"sourceMap": true,
		"strict": true,
		"alwaysStrict": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		// "listEmittedFiles": true,

		"allowJs": true,
		"checkJs": true,

		// "allowSyntheticDefaultImports": true, // enabled by "esModuleInterop"
		// "allowUnreachableCode": false, // editor warning when undefined
		// "allowUnusedLabels": false, // editor warning when undefined
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"noErrorTruncation": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitAny": true,
		"noImplicitOverride": true,
		"noImplicitReturns": false,
		"noImplicitThis": true,
		"noPropertyAccessFromIndexSignature": true,
		// DISABLED - total bummer when testing, gets in the way
		// "noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": true,
		"strictFunctionTypes": true,
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"useUnknownInCatchVariables": false,
	},
	// "files": [ "./src/**.ts", "./test/**.ts" ], // doesn't support wildcards
	// "include": [ "./src/**", "./test/**" ], // File spec cannot end in recursive wildcard
	// "include": [ "./src/**.ts", "./test/**.ts" ], // doesn't match multiple directories
	// "include": [
	// 	"src",
	// 	"test",
	// ],
	// "include": [
	// 	// for when glob doesn't work
	// 	"./src/*.ts",
	// 	"./src/*/*.ts",
	// 	"./src/*/*/*.ts"
	// ],
	"exclude": [
		"node_modules",
		"**/node_modules",
		"dist",
		"dummy-ext",
		"test_projects"
	]
}
